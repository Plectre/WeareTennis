<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_g"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding">

        <FrameLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_pleine" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_pleine" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_vide" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_vide" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_vide" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/bulle_vide_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/bulle_vide" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="155dp">

                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/set_vide_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/set_plein" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/set_vide_2"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/set_vide" />
                <ImageView
                    android:padding="@dimen/padding_bulles"
                    android:id="@+id/set_vide_3"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_bulle_vide"
                    android:src="@drawable/set_vide" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_eux"
                android:layout_width="@dimen/main_button_size"
                android:layout_height="@dimen/main_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/orange"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/withe"
                android:textSize="@dimen/h1" />

        </FrameLayout>
        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_nous"
                android:layout_width="@dimen/main_button_size"
                android:layout_height="@dimen/main_button_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/orange"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/withe"
                android:textSize="@dimen/h1" />
        </FrameLayout>
    </FrameLayout>
</android.support.wear.widget.BoxInsetLayout>